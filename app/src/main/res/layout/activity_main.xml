<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_Respond"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Switch
            android:id="@+id/NotiMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="靜音手機警報"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="@+id/tableLayout2"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:stretchColumns="*"
            android:padding="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/btBTConct">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/SpeedView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="現在時速:"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/MileageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="總里程數:"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>


            </TableRow>


        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toTopOf="@+id/include2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/lck_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_span="1"
                    android:background="@drawable/button_style_off"
                    android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                    android:text="上鎖模式"

                    android:textColor="?attr/colorControlNormal"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/las_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_span="1"
                    android:background="@drawable/button_style_off"
                    android:drawableLeft="@drawable/ic_bike_icon_off_black"
                    android:text="自動煞車"

                    android:textColor="?attr/colorControlNormal"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/SpLit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"


                    android:layout_span="1"
                    android:background="@drawable/button_style_off"
                    android:drawableLeft="@drawable/ic_speed"
                    android:text="時速限制:0"
                    android:textAlignment="center"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buzz_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_span="1"

                    android:background="@drawable/button_style_off"
                    android:drawableLeft="@drawable/ic_baseline_volume_up_24"
                    android:text="靜音蜂鳴器"

                    android:textColor="?attr/colorControlNormal"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <include
            android:id="@+id/include"
            layout="@layout/appbar" />

        <Button
            android:id="@+id/BTOpen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorOff"
            android:drawableTop="@drawable/ic_baseline_bluetooth_24"
            android:text="開啟藍芽"
            android:textColor="?attr/colorControlNormal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btBTDiscont"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <Button
            android:id="@+id/btBTDiscont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorOff"
            android:drawableTop="@drawable/ic_baseline_bluetooth_disabled_24"
            android:text="中斷連線"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/BTOpen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8523316" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="386dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/btnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="562dp" />

        <Button
            android:id="@+id/btBTConct"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="未連線"
            app:layout_constraintEnd_toStartOf="@+id/btBTDiscont"
            app:layout_constraintStart_toEndOf="@+id/BTOpen"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <include
            android:id="@+id/include2"
            layout="@layout/bottom_nav_view">
            </include>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/nav_view" />
</androidx.drawerlayout.widget.DrawerLayout>